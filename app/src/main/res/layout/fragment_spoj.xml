<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@drawable/border_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spoj_fragment_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            android:background="@color/codechef_color"
            android:textColor="@color/website_text_color"
            android:text="@string/spoj"/>


    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spoj_fragment_details">

        <TableRow android:layout_marginBottom="10dp">

            <TextView
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="World Rank"/>

            <TextView
                android:id="@+id/spoj_world_rank"
                android:layout_weight="2"
                android:textSize="20sp"
                tools:text="World Rank"/>

        </TableRow>


        <TableRow android:layout_marginBottom="10dp">

            <TextView
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Problems Solved"/>

            <TextView
                android:id="@+id/spoj_problems_solved"
                android:layout_weight="2"
                android:textSize="20sp"
                tools:text="Problems Solved"/>

        </TableRow>

        <TableRow android:layout_marginBottom="10dp">

            <TextView
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Solution Submitted"/>

            <TextView
                android:id="@+id/spoj_solutions_submitted"
                android:layout_weight="2"
                android:textSize="20sp"
                tools:text="Solutions Submitted"/>

        </TableRow>

    </TableLayout>

    <ProgressBar
        android:id="@+id/loading_indicator_spoj"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>